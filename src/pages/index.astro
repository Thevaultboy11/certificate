---
import Layout from "../components/Layout.astro";
import MainCard from "src/components/MainCard.astro";
import MediumPost from "@components/MediumPost";
import MainContainer from "src/components/MainContainer.astro";
import ContainerScroll from "@components/ContainerScroll.astro";
import TextSlide from "@components/TextSlide.astro";
---

<Layout title="Certificate - OOX LIMITED">
    <MainCard />

    <div class="block lg:hidden 2xl:block overflow-auto no-scrollbar">
        <ContainerScroll>
            <MediumPost client:visible />
        </ContainerScroll>
    </div>

    <div class="hidden lg:flex 2xl:hidden">
        <MainContainer>
            <TextSlide />
        </MainContainer>
    </div>

    <div>
        <h3>Issued at: 23.08.2023</h3>
        <h3>Certificate ID: 9ec54750-c3d7-4d89-b9d6-5d78e95d6469</h3>
        <a href="/disclaimer" class="underline text-purple-700"
            >Certificate Disclaimer</a
        >
    </div>
</Layout>
